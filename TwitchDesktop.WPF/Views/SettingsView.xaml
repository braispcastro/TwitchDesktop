<Page
    x:Class="TwitchDesktop.WPF.Views.SettingsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:TwitchDesktop.WPF.Views"
    xmlns:ViewModel="clr-namespace:TwitchDesktop.ViewModel.ViewModels;assembly=TwitchDesktop.ViewModel"
    xmlns:Converters="clr-namespace:TwitchDesktop.WPF.Converters"
    mc:Ignorable="d" 
    d:DesignHeight="580" d:DesignWidth="960"
    Background="Transparent"
    Title="SettingsView"
    Loaded="SettingsView_Loaded">
    <Page.DataContext>
        <ViewModel:SettingsViewModel />
    </Page.DataContext>
    <Page.Resources>
        <Converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <Style x:Key="CustomButtonStyle" TargetType="Button">
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Name="border"
                            Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="Transparent" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>
    <Grid>
        <!-- ACCOUNT -->
        <Image
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Width="32" Height="32"
            Margin="232 32 0 0"
            Source="/TwitchDesktop.WPF;component/Resources/Icons/ico_account_white.png"/>
        <Grid
            Width="420"
            Margin="38 72 38 38"
            HorizontalAlignment="Left"
            Background="#201C2B">
            <Ellipse
                Width="180" Height="180"
                Margin="0 58 0 0"
                VerticalAlignment="Top"
                Stroke="White">
                <Ellipse.Fill>
                    <ImageBrush ImageSource="{Binding UserImage}"/>
                </Ellipse.Fill>
            </Ellipse>
            <TextBlock
                Margin="0 84 0 0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="20"
                FontWeight="Bold"
                Text="{Binding UsernameText}"
                Foreground="White"/>
            <Button
                Height="50"
                Margin="36 0 36 36"
                VerticalAlignment="Bottom"
                Background="#6441A4"
                Style="{StaticResource CustomButtonStyle}"
                MouseEnter="Button_MouseEnter"
                MouseLeave="Button_MouseLeave"
                Command="{Binding LoginCommand}"
                IsEnabled="{Binding NeedAuth}">
                <Grid
                    Width="350" Height="50">
                    <Image
                        Margin="9"
                        HorizontalAlignment="Left"
                        Source="/TwitchDesktop.WPF;component/Resources/Images/twitch_glitch_white.png" />
                    <TextBlock
                        Margin="28 0 0 2"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="22"
                        FontWeight="Bold"
                        Text="LOG IN WITH TWITCH"
                        Foreground="White"/>
                </Grid>
            </Button>
        </Grid>
        <!-- OPTIONS -->
        <Image
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Width="32" Height="32"
            Margin="0 32 232 0"
            Source="/TwitchDesktop.WPF;component/Resources/Icons/ico_settings_white.png"/>
        <Grid
            Width="420"
            Margin="38 72 38 38"
            HorizontalAlignment="Right"
            Background="#201C2B">

        </Grid>
    </Grid>
</Page>